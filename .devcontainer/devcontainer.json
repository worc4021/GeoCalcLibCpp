{
    "name": "GeoCalcLibCpp",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "USERNAME": "${localEnv:MATLAB_USER}"
        }
    },
    "runArgs": [
        "--mac-address=${localEnv:MATLAB_MAC}",
        "--shm-size=512m",
        "--network=bridge",
        "--rm"
    ],
    "remoteUser": "${localEnv:MATLAB_USER}",
    "remoteEnv": {
        "MLM_LICENSE_FILE": "/home/vscode/license.lic"
    },
    "postAttachCommand": "echo $MATLAB_MAC | gpg --batch --yes --passphrase-fd 0 --output ~/license.lic --decrypt ~/license.lic.gpg"
}